{
    "info": {
        "name": "Employee Shift Board API",
        "description": "API collection for the Employee Shift Board application",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"hire-me@anshumat.org\",\n  \"password\": \"HireMe@2025!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set('token', jsonData.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Signup",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@company.com\",\n  \"password\": \"Test@2025!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/signup",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "signup"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Employees (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/auth/employees",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "employees"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Shifts",
            "item": [
                {
                    "name": "Create Shift (Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": \"EMPLOYEE_ID_HERE\",\n  \"date\": \"2025-12-10\",\n  \"startTime\": \"2025-12-10T09:00:00\",\n  \"endTime\": \"2025-12-10T17:00:00\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/shifts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "shifts"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Shifts",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/shifts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "shifts"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Shifts by Date",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/shifts?date=2025-12-10",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "shifts"
                            ],
                            "query": [
                                {
                                    "key": "date",
                                    "value": "2025-12-10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Shift",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/shifts/SHIFT_ID_HERE",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "shifts",
                                "SHIFT_ID_HERE"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{baseUrl}}/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            }
        }
    ]
}